@model Diary.UI.Models.Message

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-controller="customers" asp-action="AddorEdit" onsubmit="return jQueryAjaxPost(this);">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label asp-for="Subject" class="col-sm-4 col-form-label text-sm-left"></label>
                        <div class="col-sm-8">
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Createdby" class="col-sm-4 col-form-label text-sm-left"></label>
                        <div class="col-sm-8">
                            <input asp-for="Createdby" class="form-control" />
                            <span asp-validation-for="Createdby" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MessageBody" class="col-sm-4 col-form-label text-sm-left"></label>
                        <div class="col-sm-8">
                            <textarea asp-for="MessageBody" class="form-control"> </textarea>
                            <span asp-validation-for="MessageBody" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary ">Save </button>

                            <a class="btn btn-dark " asp-action="Index">Cancel</a>
                        </div>

                    </div>
                </form>


            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
