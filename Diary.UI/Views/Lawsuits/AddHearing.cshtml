@model Diary.UI.Models.HearingViewModel
@{ Layout = null; }
<div>
    <form asp-action="AddHearing" onsubmit="return jQueryAjaxPost(this);">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Lawsuits.Id" hidden />
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" rows="2" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NextDate" class="control-label"></label>
            <input asp-for="NextDate" class="form-control" type="date" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>




        <div class="modal-footer">

            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>

    </form>
</div>
