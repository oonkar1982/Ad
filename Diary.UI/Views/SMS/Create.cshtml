@model Diary.UI.Models.Messagerecipient



<div class="row">
    <div class="col-xl-6 col-md-4">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group row mb-4">
                        <label asp-for="Message" class="col-sm-3 col-form-label text-sm-left"></label>
                        <div class="col-sm-9">
                            <textarea asp-for="Message" class="form-control"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label asp-for="PhoneNo" class="col-sm-3 col-form-label text-sm-left"></label>
                        <div class="col-sm-9">
                            <input asp-for="PhoneNo" class="form-control" />
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row mb-4">
                        <label asp-for="Lawsuit" class="col-sm-3 col-form-label text-sm-left"></label>
                        <div class="col-sm-9">

                            <input asp-for="Lawsuit" class="form-control" />
                            <span asp-validation-for="Lawsuit" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group row justify-content-end">
                        <div class="col-sm-12">
                            <div>
                               
                                    <button type="submit" class="btn btn-primary ">Submit</button>
                                

                                <a class="btn btn-dark " asp-controller="lawsuits" asp-action="Index">Cancel</a>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
