@model IEnumerable<Diary.UI.Models.Court>

@{
    ViewData["Title"] = "Index";
}



<table id="example" class="table">
    <thead class="thead-primary">
        <tr>
            <th><a class="btn btn-danger text-white btnEdit clsShow" asp-action="Create">Add</a></th>
            <th> @Html.DisplayNameFor(model => model.CourtName)</th>
            <th>Action</th>
        </tr>

    </thead>

    @if (Model.Count() >= 0)
    {
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th>#</th>
                    <th>
                        @item.CourtName
                    </th>

                    <th>
                        <a class="btn btn-primary text-white btnEdit clsShow" asp-controller="Courts" asp-action="Edit" asp-route-id="@item.Id">
                            Edit
                        </a>

                    </th>
                </tr>
            }
        </tbody>
    }
    else
    {
        <tfoot>
            <tr> <th>No Recotd Found</th></tr>
        </tfoot>
    }

</table>
@section Scripts{

    <link href="~/css/datatables.css" rel="stylesheet" />


    <script>

    $(document).ready(function () {


    $('#example').DataTable();

    });

    </script>
}